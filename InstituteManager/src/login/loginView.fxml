      </ImageView>
      <Label layoutX="113.0" layoutY="242.0" text="User ID">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label layoutX="113.0" layoutY="303.0" text="Password">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="txtId" layoutX="219.0" layoutY="243.0" />
      <TextField fx:id="txtPwd" layoutX="220.0" layoutY="303.0" />
      <Button layoutX="216.0" layoutY="380.0" mnemonicParsing="false" onAction="#doLogin" text="Login">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
